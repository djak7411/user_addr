<Window x:Class="user_addr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:user_addr"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Center" Height="424" VerticalAlignment="Top" Width="800">
            <MenuItem Header="Адреса" x:Name="Address" Click="Address_Click"/>
            <MenuItem x:Name="City" Header="Города" Click="City_Click"/>
            <MenuItem x:Name="Country" Header="Страны" Click="Country_Click"/>
            <MenuItem x:Name="Region" Header="Регионы" Click="Region_Click"/>
        </Menu>

    </Grid>
</Window>
